<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gatech.seclass"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Customer"
            android:label="@string/title_activity_customer" >
        </activity>
        <activity
            android:name=".StallManager"
            android:label="@string/title_activity_stall_manager" >
        </activity>
        <activity
            android:name=".CustomerTransaction"
            android:label="@string/title_activity_purchase" >
        </activity>
        <activity
            android:name=".TransactionHistory"
            android:label="@string/title_activity_transaction_history" >
        </activity>
    </application>

</manifest>
